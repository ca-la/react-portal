{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist/",
    "strict": true,
    "importHelpers": true,
    "pretty": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*spec.ts*"
  ]
}
