#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail
set -o noglob

# Format .ts / .tsx source files that have been updated since master with
# prettier.
#
# Usage: bin/format [-al]
# Options:
#  -a Run on all .ts(x) files, not just divergent files
#  -l List non-conforming files and exit with non-zero if any exist

main() {
  files=$(git diff --name-only master | grep -E ".tsx?$" || true)
  prettier_opts="--write"

  while getopts "al" opt; do
    case $opt in
      a)
        files='src/**/*.{ts,tsx}'
        ;;
      l)
        prettier_opts="-l"
        ;;
      *)
        echo 'Usage: bin/format [-al]'
        echo 'Options:'
        echo ' -a Run on all valid files, not just divergent files'
        echo ' -l List non-conforming files and exit with non-zero if any exist'
        exit 1
    esac
  done

  if [[ -n $files ]]
  then
    npx prettier $prettier_opts $files
  else
    exit 0
  fi
}

main "$@"
